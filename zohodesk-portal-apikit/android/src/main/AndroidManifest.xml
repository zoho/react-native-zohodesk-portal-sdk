<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zohodeskportalapikit">

    <!-- Requesting permissions to read and write external storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <!-- Optionally, if targeting Android 10 or higher, add this to allow access to files outside your app's directory -->
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" tools:ignore="ProtectedPermissions"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <!-- Add your activities here -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Add other components as needed -->
        
    </application>

</manifest>
